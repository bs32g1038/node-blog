{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist-server",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@blog/*": ["./*"]
        }
    },
    "exclude": ["node_modules", ".next", "static", "public", "assets", "dist", "test"],
    "include": ["server/*.ts", "scripts"]
}
