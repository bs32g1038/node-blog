{
  "name": "ts-blog",
  "version": "3.0.0",
  "description": "a blog server api",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Jason Li",
    "email": "bs32g1038@163.com"
  },
  "homepage": "http://www.lizc.me",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "debug": "nodemon --config nodemon-debug.json",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "@nestjs/common": "^6.4.1",
    "@nestjs/core": "^6.4.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.4.1",
    "@types/crypto-js": "^3.1.43",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "^0.2.3",
    "cross-env": "^5.2.0",
    "crypto-js": "^3.1.9-1",
    "data2xml": "^1.3.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.18.0",
    "highlight.js": "^9.15.8",
    "husky": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.2.0",
    "log4js": "^4.4.0",
    "lru-cache": "^5.1.1",
    "markdown-it": "^8.4.2",
    "markdown-it-link-attributes": "^2.1.0",
    "mongoose": "^5.6.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.4.1",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.2",
    "@types/jest": "^24.0.15",
    "@types/joi": "^14.3.3",
    "@types/lru-cache": "^5.1.0",
    "@types/markdown-it": "^0.0.8",
    "@types/multer": "^1.3.7",
    "@types/node": "^12.0.12",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./src/**/*.{js,ts}",
      "!./src/main.ts",
      "!./src/configs/index.config.ts",
      "!./src/utils/**",
      "!./src/pipes/joi.validation.pipe.ts",
      "!./src/filters/all-exceptions.filter.ts",
      "!./src/middlewares/rate-limit.middleware.ts"
    ],
    "globalSetup": "<rootDir>/test/setup-globals.ts",
    "setupFiles": [
      "<rootDir>/test/setup-files.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/default-timeout.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css,html}": [
      "prettier --tab-width 4 --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
