    "react-calendar-heatmap": "^1.8.1",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-tooltip": "^3.11.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "tslint-react": "^4.1.0",
    "typescript": "3.7.3",
    "url-loader": "^3.0.0",
    "wait-on": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./server/**/*.{js,ts}",
      "!./server/main.ts",
      "!./server/configs/index.config.ts",
      "!./server/utils/**",
      "!./server/pipes/joi.validation.pipe.ts",
      "!./server/filters/all-exceptions.filter.ts",
      "!./server/middlewares/rate-limit.middleware.ts",
      "!./server/database/database.module.ts",
      "!./server/modules/write.day.reading.module.ts"
    ],
    "globalSetup": "<rootDir>/test/setup-globals.ts",
    "setupFiles": [
      "<rootDir>/test/setup-files.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/default-timeout.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.build.json"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
