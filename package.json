{
  "name": "node-blog",
  "version": "5.0.0-alpha.2",
  "description": "A simple and whole blog",
  "homepage": "https://www.lizc.net",
  "github": "https://github.com/bs32g1038",
  "license": "MIT",
  "author": {
    "name": "Jason Li",
    "email": "bs32g1038@163.com"
  },
  "scripts": {
    "prebuild:server": "rimraf dist",
    "init:dev:data": "tsc -p tsconfig.build.json && cross-env NODE_ENV=development node dist-server/scripts/init_faker_data.js",
    "dev:server": "npm run build:server && cross-env NODE_ENV=development nest start",
    "dev:server:watch": "cross-env NODE_ENV=development nest start --watch",
    "dev:server:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "dev:web": "cross-env NODE_ENV=development ts-node -P tsconfig.build.json client/dev.server.ts",
    "build": "npm run build:server && npm run build:web",
    "build:server": "nest build --config tsconfig.build.json",
    "build:web": "next build",
    "start:prod": "cross-env NODE_ENV=production node dist-server/server/main.js",
    "next:lint": "next lint",
    "lint": "eslint **/*.{ts,js,tsx,jsx} --ignore-path .eslintignore",
    "format": "prettier **/**/*.{ts,tsx,js,jsx,scss} --config ./.prettierrc --ignore-path ./.prettierignore --write",
    "test": "cross-env NODE_ENV=test jest --runInBand --maxConcurrency=1",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --maxConcurrency=1 --watch",
    "test:cov": "cross-env NODE_ENV=test jest --runInBand --maxConcurrency=1 --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "fix:prod:comment:count": "tsc -p tsconfig.build.json && cross-env NODE_ENV=production node dist/scripts/fix_comment_count.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --config ./.prettierrc --parser=typescript --write",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.3.0",
    "@nestjs/config": "^1.1.7",
    "@nestjs/core": "^8.3.0",
    "@nestjs/platform-express": "^8.3.0",
    "@nestjs/schedule": "^1.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/serve-favicon": "^2.5.3",
    "@types/sharp": "^0.29.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "data2xml": "^1.3.4",
    "express": "^4.17.2",
    "express-rate-limit": "^6.2.1",
    "fs-extra": "^10.0.0",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.4.1",
    "lru-cache": "^7.3.1",
    "markdown-it": "^12.3.2",
    "mongoose": "^6.2.1",
    "nodemailer": "^6.7.2",
    "path-to-regexp": "^6.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "scroll-into-view-if-needed": "^2.2.29",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.30.1",
    "to-ico": "^1.1.5",
    "validator": "^13.7.0",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@ant-design/icons": "^4.7.0",
    "@emotion/react": "^11.7.1",
    "@eslint/eslintrc": "^1.1.0",
    "@faker-js/faker": "^6.0.0-alpha.6",
    "@nestjs/cli": "^8.2.0",
    "@nestjs/testing": "^8.3.0",
    "@next/eslint-plugin-next": "^12.0.10",
    "@reduxjs/toolkit": "^1.7.2",
    "@toast-ui/editor": "^3.1.3",
    "@types/body-parser": "^1.19.2",
    "@types/crypto-js": "^4.1.0",
    "@types/express": "^4.17.13",
    "@types/find-root": "^1.1.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/lru-cache": "^5.1.1",
    "@types/markdown-it": "^12.2.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.17",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.22",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "antd": "^4.18.7",
    "axios": "^0.26.0",
    "clipboard": "^2.0.10",
    "dayjs": "^1.10.7",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "find-root": "^1.1.0",
    "framer-motion": "^6.2.6",
    "http-proxy-middleware": "^2.0.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "lodash": "^4.17.21",
    "nanoid": "^3.2.0",
    "next": "^12.0.10",
    "next-redux-wrapper": "^7.0.5",
    "prettier": "^2.5.1",
    "query-string": "^7.1.1",
    "rc-tween-one": "^3.0.3",
    "react": "^17.0.2",
    "react-calendar-heatmap": "^1.8.1",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-svg": "^14.1.11",
    "react-tooltip": "^4.2.21",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^@blog/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./server/**/*.{js,ts}",
      "!./server/main.ts",
      "!./server/app.module.ts",
      "!./server/configs/index.config.ts",
      "!./server/utils/**",
      "!./server/pipes/joi.validation.pipe.ts",
      "!./server/filters/all-exceptions.filter.ts",
      "!./server/middlewares/rate-limit.middleware.ts",
      "!./server/database/database.module.ts",
      "!./server/modules/app-config/**",
      "!./server/modules/email/**",
      "!./server/modules/tasks/**",
      "!./server/joi/schemas/**"
    ],
    "globalSetup": "<rootDir>/test/setup-globals.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/test/default-timeout.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.build.json",
        "diagnostics": false
      }
    }
  }
}
