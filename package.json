    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "find-root": "^1.1.0",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^9.1.6",
    "nanoid": "^5.0.4",
    "next": "^13.5.4",
    "next-redux-wrapper": "^9.0.0-rc.2",
    "prettier": "^3.2.4",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@blog/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.build.json",
          "diagnostics": false
        }
      ]
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./server/**/*.{js,ts}",
      "!./server/main.ts",
      "!./server/app.module.ts",
      "!./server/configs/index.config.ts",
      "!./server/utils/**",
      "!./server/pipes/joi.validation.pipe.ts",
      "!./server/filters/all-exceptions.filter.ts",
      "!./server/middlewares/rate-limit.middleware.ts",
      "!./server/database/database.module.ts",
      "!./server/modules/dynamic-config/**",
      "!./server/modules/email/**",
      "!./server/modules/tasks/**",
      "!./server/joi/schemas/**",
      "!./server/mongoose/**",
      "!./server/models/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/default-timeout.ts"
    ]
  }
}
