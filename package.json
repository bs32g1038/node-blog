{
  "name": "node-blog",
  "version": "3.3.0",
  "description": "A simple and whole blog",
  "homepage": "https://www.lizc.net",
  "license": "MIT",
  "author": {
    "name": "Jason Li",
    "email": "bs32g1038@163.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \" npm run dev:web \"",
    "dev:server": "cross-env NODE_ENV=development concurrently --handle-input \"wait-on dist/server/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "dev:web": "cross-env NODE_ENV=development node client/dev.server.js",
    "build": "concurrently \"npm run build:server\" \" npm run build:web \"",
    "build:server": "rimraf dist && tsc -p tsconfig.build.json",
    "build:web": "next build && node ./build/remove-css-link.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server/main.js",
    "lint": "eslint **/*.{ts,js,tsx,jsx} --ignore-path .eslintignore",
    "format": "prettier **/**/*.{ts,tsx,js,jsx} --config ./.prettierrc --ignore-path ./.prettierignore --write",
    "start:debug": "nodemon --config nodemon-debug.json",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nestjs/common": "^6.10.10",
    "@nestjs/core": "^6.10.10",
    "@nestjs/platform-express": "^6.10.10",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^6.0.3",
    "crypto-js": "^3.1.9-1",
    "data2xml": "^1.3.4",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "highlight.js": "^9.16.2",
    "husky": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.1.0",
    "lru-cache": "^5.1.1",
    "markdown-it": "^10.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "mongoose": "^5.8.0",
    "next": "^9.1.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "scroll-into-view-if-needed": "^2.2.20",
    "validator": "^12.1.0",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@nestjs/testing": "^6.10.10",
    "@types/cheerio": "^0.22.15",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.4",
    "@types/helmet": "^0.0.45",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lru-cache": "^5.1.0",
    "@types/markdown-it": "^0.0.9",
    "@types/mongoose": "^5.5.34",
    "@types/multer": "^1.3.10",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "@zeit/next-css": "^1.0.1",
    "antd": "^3.26.2",
    "babel-plugin-import": "^1.13.0",
    "clipboard": "^2.0.4",
    "codemirror": "^5.49.2",
    "concurrently": "^5.0.1",
    "dayjs": "^1.8.17",
    "emotion": "^10.0.23",
    "emotion-server": "^10.0.17",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "github-markdown-css": "^3.0.1",
    "http-proxy-middleware": "^0.20.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "markdown-it-for-inline": "^0.1.1",
    "nodemon": "^2.0.1",
    "null-loader": "^3.0.0",
