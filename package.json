{
  "name": "node-blog",
  "version": "2.0.0",
  "description": "A simple and whole blog",
  "homepage": "https://www.lizc.net",
  "license": "MIT",
  "author": {
    "name": "Jason Li",
    "email": "bs32g1038@163.com"
  },
  "scripts": {
    "lint-staged:web": "yarn --cwd ./web lint-staged",
    "lint-staged:server": "yarn --cwd ./server lint-staged",
    "lint-staged:admin": "yarn --cwd ./admin lint-staged",
    "lint-staged": "yarn run lint-staged:web && yarn run lint-staged:server && yarn run lint-staged:admin",
    "install:web": "yarn --cwd ./web install",
    "install:server": "yarn --cwd ./server install",
    "install:admin": "yarn --cwd ./admin install",
    "postinstall": "yarn run install:web && yarn run install:server && yarn run install:admin"
  },
  "devDependencies": {
    "husky": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
