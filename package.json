{
  "name": "node-blog",
  "version": "v6.0.0-rc.2",
  "description": "A simple and whole blog",
  "homepage": "https://www.lizc.net",
  "github": "https://github.com/bs32g1038",
  "license": "MIT",
  "author": {
    "name": "Jason Li",
    "email": "bs32g1038@163.com"
  },
  "scripts": {
    "prebuild:server": "rimraf dist",
    "init:dev:data": "nest build --config tsconfig.build.json && cross-env NODE_ENV=development node dist-server/scripts/init_faker_data.js",
    "dev:server": "npm run build:server && cross-env NODE_ENV=development nest start",
    "dev:server:watch": "cross-env NODE_ENV=development nest start --watch",
    "dev:server:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "dev:web": "cross-env NODE_ENV=development ts-node -P tsconfig.build.json client/dev.server.ts",
    "build": "npm run build:server && npm run build:web",
    "build:server": "nest build --config tsconfig.build.json",
    "build:web": "next build",
    "start:prod": "cross-env NODE_ENV=production node dist-server/server/main.js",
    "next:lint": "next lint",
    "lint": "eslint **/*.{ts,js,tsx,jsx} --ignore-path .eslintignore",
    "format": "prettier **/**/*.{ts,tsx,js,jsx,scss} --config ./.prettierrc --ignore-path ./.prettierignore --write",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "fix:prod:comment:count": "tsc -p tsconfig.build.json && cross-env NODE_ENV=production node dist/scripts/fix_comment_count.js",
    "prepare": "husky install",
    "fix:prod:make": "tsc -p tsconfig.build.json && cross-env NODE_ENV=development node dist-server/scripts/make.js"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --config ./.prettierrc --parser=typescript --write",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/schedule": "^4.0.0",
    "@types/fs-extra": "^11.0.4",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "data2xml": "^1.3.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "log4js": "^6.9.1",
    "lru-cache": "^10.2.0",
    "mongoose": "^8.1.1",
    "nodemailer": "^6.9.8",
    "path-to-regexp": "^6.2.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.11.0",
    "to-ico": "^1.1.5",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.2.6",
    "@ant-design/plots": "^1.2.5",
    "@emotion/react": "^11.11.3",
    "@faker-js/faker": "^8.4.0",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/testing": "^10.3.1",
    "@next/eslint-plugin-next": "^14.1.0",
    "@reduxjs/toolkit": "^2.1.0",
    "@tiptap/extension-image": "^2.1.16",
    "@tiptap/extension-link": "^2.1.16",
    "@tiptap/extension-placeholder": "^2.1.16",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/react": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "@types/body-parser": "^1.19.5",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/find-root": "^1.1.4",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.6",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sanitize-html": "^2.9.5",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "antd": "^5.13.3",
    "axios": "^1.6.7",
    "boring-avatars": "^1.10.1",
    "clsx": "^2.1.0",
