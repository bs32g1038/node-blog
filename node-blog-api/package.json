{
  "name": "ts-blog",
  "version": "1.0.0",
  "description": "a blog server api",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "debug": "nodemon --config nodemon-debug.json",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:cov": "jest --coverage --config ./test/jest-e2e.json --forceExit",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.3.1",
    "@types/crypto-js": "^3.1.43",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "^0.2.3",
    "cross-env": "^5.2.0",
    "crypto-js": "^3.1.9-1",
    "data2xml": "^1.3.1",
    "highlight.js": "^9.15.8",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^4.3.1",
    "lru-cache": "^5.1.1",
    "markdown-it": "^8.4.2",
    "markdown-it-link-attributes": "^2.1.0",
    "mongoose": "^5.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.3.1",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.2",
    "@types/jest": "^24.0.15",
    "@types/joi": "^14.3.3",
    "@types/lru-cache": "^5.1.0",
    "@types/markdown-it": "^0.0.7",
    "@types/multer": "^1.3.7",
    "@types/node": "^12.0.8",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
