{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{js,ts}"
  ],
  "globalSetup": "<rootDir>/test/setup-globals.ts",
  "setupFiles": ["<rootDir>/test/setup-files.ts"]
}
