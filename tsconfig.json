{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@blog/*": [
        "./*"
      ]
    },
    "incremental": true
  },
  "types": [
    "typePatches",
    "node",
    "typings"
  ],
  "include": [
    "next-env.d.ts",
    "server/**/*.ts",
    "client/**/*.ts",
    "client/**/*.tsx",
    "pages/**/*.tsx",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
